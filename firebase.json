{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "app" // Ensure this points to your Express server function
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
