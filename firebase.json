{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/orders/**",
        "function": "app"  // Ensure this function name 'app' matches the Firebase Function name
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
